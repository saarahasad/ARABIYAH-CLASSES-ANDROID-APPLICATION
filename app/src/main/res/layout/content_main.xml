<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="-25dp"
    android:layout_height="match_parent"
    android:background="@color/two"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apple.project4.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <ImageView
        android:id="@+id/start"
        android:background="@drawable/arabiya_startupicon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/start2"

        android:text="Teaching Arabic and Islamic sciences Online"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_below="@+id/start"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/start4"
        android:background="@drawable/start1"
        android:layout_below="@id/start2"
        android:layout_width="match_parent"
        android:layout_height="140dp" />
    <ImageView
        android:id="@+id/start5"
        android:background="@drawable/start2"
        android:layout_below="@id/start4"
        android:layout_width="match_parent"
        android:layout_height="140dp" />
    <ImageView
        android:id="@+id/start6"
        android:background="@drawable/start3"
        android:layout_below="@id/start5"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>